<div class='content'>
  <h2><%= @bean.brand.name %> brand coffee</h2>
  <h3><%= @bean.name %></h3>
</div>
<div class='content form-right'>
  <h3>Submit a review:</h3>
  <%= form_for @new_review, url: brand_beans_reviews_path(@bean.id) do |f| %> 
      <%= f.label :user_name %> <%= f.text_field :user %>
      <%= f.label :drinking_for %> <%= f.text_field :experiance %>
      <%= f.label :brew_type %> <%= f.text_field :brew %>
      <%= f.label :caffeine %> <%= f.text_field :caffeine %>
      <%= f.label :flavor %> <%= f.text_field :flavor %>
      <%= f.label :overall %> <%= f.text_field :rating %>
      <%= f.submit %>
  <% end %>
</div>

<div class='content left'>
  <h3>Coffee brand selection list:</h3>
  <table style="width: 450px">
    <tr><th>User:</th><th>Brew type:</th><th>Drinker for:</th><th>Flavor:</th><th>Caffeine:</th><th>Overall:</th></tr>
    <%@reviews.each do |review| %>
      <tr>
        <td><%= review.user %></td>
        <td><center><%= review.brew %></center></td>
        <td><center><%= review.experiance %>yrs.</center></td>
        <td><center><%= review.flavor %></center></td>
        <td><center><%= review.caffeine %></center></td>
        <td><center><%= review.rating %></center></td>
      </tr>
      <!-- # <tr><%= review.comment %></tr> -->
    <% end %>
  </table>
</div>
